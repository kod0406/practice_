{
    "manifest_version": 2,
    "name": "Timer Extension",
    "version": "1.1",
    "description": "발로 만드는 확장 프로그램",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "/Pic/icon.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "/Pic/icon16.png",
        "48": "/Pic/icon48.png",
        "128": "/Pic/icon128.png",
        "256": "/Pic/icon256.png",
        "512": "/Pic/icon512.png"
    },
    "permissions": ["alarms", "notifications"]
}
