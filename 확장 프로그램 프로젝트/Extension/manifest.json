{
    "manifest_version": 2,
    "name": "Timer Extension",
    "version": "1.1",
    "description": "A simple timer extension",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png"
    },

    "permissions": ["alarms", "notifications"]
}
